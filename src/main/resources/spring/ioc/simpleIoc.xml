<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/tool http://www.springframework.org/schema/tool/spring-tool.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd ">
    <context:component-scan base-package="com.example.lcj.spring"/>
    <bean id="controller1" class="com.example.lcj.spring.Ioc.controller.HelloController"/>

    <bean id="controller" class="com.example.lcj.spring.Ioc.controller.HelloController" autowire="byType">
        <!--<property name="helloService" ref="service" />-->
        <!--   <constructor-arg index="0" ref="service"/>-->
    </bean>
    <bean id="service1" class="com.example.lcj.spring.Ioc.service.impl.HelloServiceImpl">
        <property name="helloDao" ref="hibernate"/>
    </bean>
    <bean id="service2" class="com.example.lcj.spring.Ioc.service.impl.HelloServiceImpl2">
        <property name="helloDao" ref="hibernate"/>
    </bean>

    <bean id="dao" class="com.example.lcj.spring.Ioc.dao.impl.HelloDaoImpl"/>
    <bean id="hibernate" class="com.example.lcj.spring.Ioc.dao.impl.HelloHibernateImpl"/>
</beans>